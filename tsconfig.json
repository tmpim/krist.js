{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "outDir": "lib/esm",
    "rootDir": "."
  },
  "include": [
    "src/**/*", "typings/**/*"
  ]
}
